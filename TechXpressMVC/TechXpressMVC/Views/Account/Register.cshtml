@model TechXpress.BLL.DTO.AccountDto.RegisterDto

@{
    ViewData["Title"] = "Register";
}

<h2>Sign Up</h2>
<form method="post" asp-action="Register">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Confirm Phone Number</label>
        <input asp-for="ConfirmPhoneNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>
